{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "bracketSameLine": true,
  "printWidth": 80,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "arrowParens": "always",
  "proseWrap": "preserve",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["*.json", "*.jsonc"],
      "options": { "parser": "json", "singleQuote": false }
    },
    {
      "files": ["*.md", "*.mdx"],
      "options": { "proseWrap": "always", "printWidth": 100 }
    }
  ]
}
